@model IEnumerable<soFine.Models.SkinProduct>
@{
    Layout = "~/Views/Admin/Layout.cshtml";
}
@{
    ViewBag.Title = "Index";
}

<style>
    .container {
        display: flex;
       flex-direction:column;
        justify-content: center;
    }
    .table-success th,
    .table-success td {
        padding: 0.75rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }
</style>
<body>
<h2>
    Skin products list
</h2>
<p>
    @Html.ActionLink("Do you want to add a new skin product?", "Create")
</p>
<div class="container">
    <table class=" table-success">
        <tr>
            <th>
                @Html.DisplayName("Image")
            </th>
            <th style="width:150px">
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th style="width:750px">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th style="width:100px">
                @Html.DisplayNameFor(model => model.SkinType)
            </th>
            <th style="width:200px"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ImageData)" alt="Image" class="img-fluid" width="1000" height="600">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td style="width:700px">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SkinType)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
</body>