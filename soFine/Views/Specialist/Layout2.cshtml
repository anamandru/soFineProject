
@{
    ViewBag.Title = "Layout2";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=0">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        #home-link {
            /* Add your desired styles here */
            color: black;
            font-style: italic;
            font-size: 20px
            /* ... */
        }

        body {
            /* Add your desired styles here */
            background-image: url('/Pictures/cover2.jpg');
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
            /* ... */
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark">
        <div class="container-fluid">
            <img src="~/Pictures/Logon.png" alt="Image" class="img-fluid" width="100" height="100">
            <img src="~/Pictures/so.png" alt="Image" class="img-fluid" width="150" height="150">
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end">
                <ul class="navbar-nav flex-grow-1 ">
                    @{
                        int? specialistId = (int?)Session["SpecialistId"];
                    }
                    <li>@Html.ActionLink("Home", "FirstPage", "Specialist", new { id = ViewBag.SpecialistId }, new { @class = "nav-link", id = "home-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Specialist", new { id = ViewBag.SpecialistId }, new { @class = "nav-link", id = "home-link" })</li>

                </ul>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Skin Products", "SkinProductsList", "Specialist", new { id = ViewBag.SpecialistId }, new { @class = "nav-link", id = "home-link" })</li>
                        <li>@Html.ActionLink("Hair Products", "HairProductsList", "Specialist", new { id = ViewBag.SpecialistId }, new { @class = "nav-link", id = "home-link" })</li>
                        <li>@Html.ActionLink("Account", "EditAccount", "Specialist", new { id = ViewBag.SpecialistId }, new { @class = "nav-link", id = "home-link" })</li>
                        <span></span>
                        <img src="~/Pictures/login.png" alt="Image" class="img-fluid" width="30" height="30">
                        <li>@Html.ActionLink("Log Out", "Index", "Home", new { area = "" }, new { @class = "nav-link", id = "home-link" })</li>
                    </ul>
                </div>
</nav>
    <div class="container body-content">
       
            @RenderBody()
           
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
