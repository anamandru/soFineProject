@model IEnumerable<soFine.Models.HairProduct>
@{
    Layout = "~/Views/Specialist/Layout2.cshtml";
    ViewBag.Title = "HairProductsList";
}

<h2>Hair products </h2>

<p>
    @Html.ActionLink("Create New", "AddHairProduct", new {id = ViewBag.SpecialistId })
</p>
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        align-content: center;
        justify-content: center;
    }

    .middle-column {
        text-align: center;
        vertical-align: middle;
    }
    .name-style {
        font-weight: bold;
    }
</style>

<table >
    @{
        int numColumns = 3;
        int count = 0;
    }

    @foreach (var item in Model)
    {
        if (count % numColumns == 0)
        {
            if (count > 0)
            {
                @:</tr>
            }
            @:<tr>
            }
                  <td class="align-middle">
                      <span class="name-style">@Html.DisplayFor(modelItem => item.ProductName)</span><br />
                      <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ImageData)" alt="Image"  width="300" height="350"> <br />

                      <span class="name-style">@Html.DisplayNameFor(model => model.Category)</span>
                      <span>: </span>
                      @Html.DisplayFor(modelItem => item.Category)<br />

                      <span class="name-style">@Html.DisplayNameFor(model => model.HairType)</span>
                      <span>: </span>
                      @Html.DisplayFor(modelItem => item.HairType)<br />

                      @Html.ActionLink("Edit", "EditHairProduct", new { id = item.Id, idSpecialist = ViewBag.SpecialistId }) ||
                      @Html.ActionLink("Delete", "DeleteHairProduct", new { id = item.Id, idSpecialist = ViewBag.SpecialistId }) ||
                      @Html.ActionLink("Details", "DetailsHairProduct", new { id = item.Id, idSpecialist = ViewBag.SpecialistId })
                  </td>
            count++;
        }
</tr>
</table>
