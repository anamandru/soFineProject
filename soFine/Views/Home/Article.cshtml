@model soFine.Models.Article
@{
    ViewBag.Title = "Article";
    SoFineDB db = new SoFineDB();
}
<style>

    .container {
        display: flex;
        align-items: center;
    }

    .card {
        text-align: left;
    }
</style>
<div class="container">

    <div class="card mb-3">
        <div class="card-body">
            <h3 class="text-center mb-5">@Model.Title</h3>
            <div class="col-sm-20">
                <div style="text-align:right;">
                    <h4> written by @Model.Author</h4>                  
                   
                </div>

                <div class="col-sm-20">
                    <div style="text-align:center;">
                        <h5> @Model.ArticleText</h5>
                    </div>
                </div>

                <div>
                    <a href="@Url.Action("Index", "Home" )">Go back</a>
                </div>
            </div>
        </div>
    </div>
</div>