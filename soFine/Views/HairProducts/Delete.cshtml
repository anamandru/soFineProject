@model soFine.Models.HairProduct
@{
    Layout = "~/Views/Admin/Layout.cshtml";
}
@{
    ViewBag.Title = "Delete";
}

<style>

    .container {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        margin-top: 10px;
    }
</style>
<div class="container">

    <div class="card mb-3">
        <div class="card-body">
            <h3 class="text-uppercase text-center mb-5">Are you sure you want to delete this?</h3>
            <div class="col-sm-20">
                <dt>
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
            </div>


            <div class="col-sm-20">
                <dd>
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)" alt="Image" class="img-fluid" width="300" height="200">
                </dd>
            </div>


            <div class="col-sm-20">
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </div>


            <div class="col-sm-20">
                <dt>
                    @Html.DisplayNameFor(model => model.Category)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Category)
                </dd>
            </div>


            <div class="col-sm-20">
                <dt>
                    @Html.DisplayNameFor(model => model.HairType)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.HairType)
                </dd>
            </div>

            <div class="col-sm-20">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-primary" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>

                }
            </div>
        </div>
    </div>
</div>