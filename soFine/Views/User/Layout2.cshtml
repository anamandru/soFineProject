
@{
    ViewBag.Title = "Layout2";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=0">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #home-link {
            /* Add your desired styles here */
            color: black;
            font-style: italic;
            font-size: 20px
            /* ... */
        }

        body {
            /* Add your desired styles here */
            background-image: url('/Pictures/cover2.jpg');
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
            /* ... */
        }
        .dropbtn {
            background: #bc8f8f;
            padding: 16px;
            font-size: 20px;
            border: none;
            color: black;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

        .dropdown:hover .dropdown-content {
            display: block;
        }

    </style>

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark">
        <div class="container-fluid">
            <img src="~/Pictures/Logon.png" alt="Image" class="img-fluid" width="100" height="100">
            <img src="~/Pictures/so.png" alt="Image" class="img-fluid" width="150" height="150">
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end">
                <ul class="navbar-nav flex-grow-1 ">
                    <li>@Html.ActionLink("Home", "FirstPage", "User", new { id = ViewBag.UserId }, new { @class = "nav-link", id = "home-link" })</li>
                    <li>@Html.ActionLink("About", "About", "User", new { id = ViewBag.UserId }, new { @class = "nav-link", id = "home-link" })</li>

                </ul>
            </div>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end">
                <ul class="nav navbar-nav navbar-right">
                    <div class="dropdown">
                        <button class="dropbtn">Profile</button>
                        <div class="dropdown-content">
                    <li>@Html.ActionLink("Profile", "Home", "User", new { id = ViewBag.UserId }, new { @class = "nav-link", id = "home-link" })</li>
                    <li>@Html.ActionLink("Account", "EditAccount", "User", new { id = ViewBag.UserId }, new { @class = "nav-link", id = "home-link" })</li>
            </div>
        </div>
        <img src="~/Pictures/login.png" alt="Image" class="img-fluid" width="30" height="30">
        <li>@Html.ActionLink("Log Out", "Index", "Home", new { area = "" }, new { @class = "nav-link", id = "home-link" })</li>
        </ul>
        </div>
        </div>
    </nav>
    <div class="container body-content">

        
            @RenderBody()
          
                </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
